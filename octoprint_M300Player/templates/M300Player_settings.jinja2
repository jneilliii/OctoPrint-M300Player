<form class="form-horizontal">
    <div class="control-group">
		<label class="control-label">{{ _('Oscillator Wave Type') }}</label>
        <div class="controls">
			<input type="text" class="input-block-level" data-bind="value: plugins.M300Player.waveType">
        </div>
		<label class="control-label">{{ _('Gain Level') }}</label>
		<div class="controls">
			<input type="number" step="0.01" min="0" max="1" class="input-block-level" data-bind="value: plugins.M300Player.gainLevel">
        </div>
    </div>
</form>