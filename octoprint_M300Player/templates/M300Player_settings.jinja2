<h4>M300Player Oscillator Settings</h4>
<form class="form-horizontal" id="settings_plugin_M300Player_form">
    <div class="control-group">
		<label class="control-label">{{ _('Oscillator Wave Type') }}</label>
        <div class="controls">
			<select data-bind="options: waveTypes,optionsText: 'name',optionsValue: 'value',value: settingsViewModel.settings.plugins.M300Player.waveType"></select>
        </div>
	</div>
	<div class="control-group">
		<label class="control-label">{{ _('Gain Level') }}</label>
		<div class="controls">
			<input type="range" step="0.01" min="0" max="1" data-bind="value: settingsViewModel.settings.plugins.M300Player.gainLevel"><label data-bind="text: settingsViewModel.settings.plugins.M300Player.gainLevel"></label>
        </div>
    </div>
</form>