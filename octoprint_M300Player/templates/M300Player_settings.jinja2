<form class="form-horizontal" id="settings_plugin_M300Player_form">
    <div class="control-group">
		<label class="control-label">{{ _('Oscillator Wave Type') }}</label>
        <div class="controls">
			<select data-bind="options: settingsViewModel.settings.plugins.M300Player.waveTypes,optionsText: 'name',optionsValue: 'value',value: settingsViewModel.settings.plugins.M300Player.waveType"></select>
			<input type="text" class="input-block-level" data-bind="value: settingsViewModel.settings.plugins.M300Player.waveType">
        </div>
		<label class="control-label">{{ _('Gain Level') }}</label>
		<div class="controls">
			<input type="number" step="0.01" min="0" max="1" class="input-block-level" data-bind="value: settingsViewModel.settings.plugins.M300Player.gainLevel">
        </div>
    </div>
</form>